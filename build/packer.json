{
  "variables": {
    "username": "",
    "password": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `username`}}",
    "secret_key": "{{user `password`}}",
    "region": "ap-south-1",
    "source_ami": "ami-0bd1a64868721e9ef",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-example {{timestamp}}"
  }],
  "provisioners": [
    {
    "type": "file",
    "source": "spring-petclinic-rest-2.4.2.jar",
    "destination": "/tmp/spring-petclinic-rest-2.4.2.jar"
   }
   {
    "type": "shell",
    "scripts": [  "scripts/install_software.sh"   ],
    "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
    "pause_before": "10s"
  }]
}
